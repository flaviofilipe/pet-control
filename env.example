# =============================================================================
# Pet Control System - Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
# Environment: development, staging, production
ENV=production

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# =============================================================================
# AUTH0 CONFIGURATION (REQUIRED)
# =============================================================================
# Get these values from https://manage.auth0.com

# Your Auth0 domain (e.g., your-tenant.auth0.com)
AUTH0_DOMAIN=your-domain.auth0.com

# API Audience identifier
AUTH0_API_AUDIENCE=your-api-audience

# Application Client ID
AUTH0_CLIENT_ID=your-client-id

# Application Client Secret (keep this secure!)
AUTH0_CLIENT_SECRET=your-client-secret

# Callback URL after authentication
# For production: https://yourdomain.com/callback
# For development: http://localhost:8000/callback
AUTH0_CALLBACK_URI=https://yourdomain.com/callback

# =============================================================================
# DATABASE CONFIGURATION (REQUIRED)
# =============================================================================

# MongoDB connection string
# Local: mongodb://localhost:27017/
# Docker: mongodb://root:root@localhost:27017/
# Atlas: mongodb+srv://username:password@cluster.mongodb.net/
MONGO_URI=mongodb://username:password@host:port/database

# Database name
DB_NAME=pet_control

# Collection names (optional, defaults provided)
COLLECTION_NAME=profiles
PETS_COLLECTION_NAME=pets
VACCINES_COLLECTION_NAME=vaccines
ECTOPARASITES_COLLECTION_NAME=ectoparasites
VERMIFUGOS_COLLECTION_NAME=vermifugos

# =============================================================================
# SESSION SECURITY (REQUIRED)
# =============================================================================

# Session secret key (generate a secure key!)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SESSION_SECRET_KEY=your-super-secure-session-secret-key-here

# =============================================================================
# EMAIL NOTIFICATIONS (OPTIONAL)
# =============================================================================
# Required only if using daily/monthly notification features

# Gmail email address for sending notifications
GMAIL_EMAIL=your-notifications@gmail.com

# Gmail App Password (NOT your regular password!)
# Generate at: https://support.google.com/accounts/answer/185833
GMAIL_PASSWORD=your-gmail-app-password

# SMTP configuration (optional, defaults provided)
GMAIL_SMTP_SERVER=smtp.gmail.com
GMAIL_SMTP_PORT=587

# =============================================================================
# PRODUCTION DEPLOYMENT GUIDE
# =============================================================================

# 1. Copy this file: cp env.example .env
# 2. Fill in all REQUIRED values above
# 3. Generate secure SESSION_SECRET_KEY
# 4. Configure Auth0 application
# 5. Set up MongoDB (local/Atlas/Docker)
# 6. Configure Gmail App Password (if using notifications)
# 7. Test with: uv run uvicorn main:app --reload
# 8. Deploy with Docker: docker build -f Dockerfile.production -t pet-control .

